{
    "tasks": {
        "start": {
            "cache": false,
            "persistent": true
        },
        "start:dev": {
            "cache": false,
            "persistent": true
        }
    },

    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "dev": {
            "cache": false
        }
    }
}
